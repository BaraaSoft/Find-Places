<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:background="#00000000"
                android:src="@drawable/ic_img_place_holder" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/btnImg"
                android:textColor="@color/primary_text"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:text="KFC Fried Chickens" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@+id/btnImg"
                android:textColor="@color/secondary_text"
                tools:text="526, Lebuh SIBC, Bandar Seri Iskandar, 32610, Perak, Malaysia" />

            <ImageButton
                android:id="@+id/btnDone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:background="#00000000"
                android:src="@drawable/ic_done_black" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>